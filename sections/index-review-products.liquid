
<div class="review-products">
    <div class="container">
      <div class="title-div">
          <h2 class="title text-center review-title">{{ section.settings.title }}</h2>
      </div>
      <div class="main-wrapper">
        {% for block in section.blocks %}
            {% if block.settings.enable %}
                {% assign product =all_products[block.settings.featured_product] %}
                {% assign initial_image = product.images[1].src %}

                <div class="review-wrap ">
            
                    <div class="d-flex">
                        <div class="image_wrap {% if forloop.index == 1 %} fst_img {% elsif forloop.index == 3 %}third{% endif %}">
                            {%  if  initial_image != blank %}
                                <a href="{{ product.url }}">
                                {% render 'responsive-image' with image : initial_image , class: 'productitem--image-primary img-fluid', image.alt : initial_image.alt, max_width : 200, max_height : 200 %}
                                </a>
                            {% endif %}
                        </div>
                        <div class="content_wrap ps-3">
                            <div class="star_wrap mt-2">
                                <a href="{{ product.url }}">
                            {% if block.settings.review_star == 3 %}
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                            <i class="fa fa-star-o"></i>

                            {% elsif block.settings.review_star == 4 %}

                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star-o"></i>
                            {% elsif block.settings.review_star == 5 %}
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>                   
                            {% endif %}
                            <span class="author-name">{{ block.settings.review_author }}</span>
                            </a>
                            </div>
                            <div class="review_content">
                                <a href="{{ product.url }}">
                                    <p class="py-sm-3 py-1 m-0 fw-bold"><strong>{{ block.settings.review_title }}</strong></p>
                                    <div class="review_description">{{ block.settings.review_description }}</div>
                                </a>
                                        <div class="discount mt-2">
                                            <a href="{{ product.url }}">
                                                <span>{% if product.compare_at_price > product.price %}
                                                <del style="color:#444">{{ product.compare_at_price | money }}</del>&nbsp;
                                                {% endif %}
                                                    {{ product.price | money }}</span>
                                            </a>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                  
            {% endif %}
        {% endfor %}
      </div>
      <a class="mobile_btn" href="javascript:void(0)">{{ section.settings.btnname }}</a>
      </div>
</div>
{{ 'section-index-review-products.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Review",
  "max_blocks": 3,
  "tag":"section",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
{
"type": "checkbox",
"id": "enable",
"label": "Enable",
"default": true
},
{
"type": "text",
"id": "title",
"label": "Title",
"default": "Shop Area Rugs Over 10,000 Customers Love"
},
{
"type": "text",
"id": "btnname",
"label": "Mobile Button",
"default": "More Review"
}
],
"blocks": [
{
"type": "featured_product",
"name": "Featured Review Product",
"settings": [
{
"type": "checkbox",
"id": "enable",
"label": "Enable",
"default": true
},
{
"type": "product",
"id": "featured_product",
"label": "Featured Product"
}
,
{
"type": "range",
"id": "review_star",
"label": "Review Star",
"min": 3,
"step": 1,
"max": 5,
"default": 5
},
{
"type": "text",
"id": "review_author",
"label": "Review Author",
"default": "Alexis"
},
{
"type": "text",
"id": "review_title",
"label": "Review Title",
"default": "Awesome Rug"
},
{
"type": "textarea",
"id": "review_description",
"label": "Review Description",
"default": "This rug is gorgeous in person.It has a vintage, faded look with muted colors.it looks.."
}
]


}
],
"presets": [
  {
    "name": "Featured Review",
    "category": "Review"
  }
]
}
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

