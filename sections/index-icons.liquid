<div class="container index-icons">
    <div class="main_icon_wrap">
        {% for block in section.blocks %}
            {% if block.type == "icons" and block.settings.enable %}
            <div class='item-icon'>
                {% if block.settings.icon_image != blank %}
                {%
                                        render 'rimg',
                                        class: 'img-fluid productitem--image-primary',
                                        img: block.settings.icon_image,
                                        size: '100x100'
                                    %}
                {% endif %}
                <h3>{{ block.settings.title }}</h3>
            </div>
            {% endif %}
        {% endfor %}
    </div>
</div>
{{ 'section-index-icons.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Index-Icons",
  "tag": "section",
  "class": "spaced-section spaced-section--full-width",
  "max_blocks":4,
  "settings":[
      
  ],
  "blocks":[
            {
            "type":"icons",
            "name":"Icons",
            "settings":[
                    {
                    "type" : "checkbox",
                    "id" : "enable",
                    "label" : "Enable",
                    "default" : true
                    },
                    {
                    "type" : "image_picker",
                    "id" : "icon_image",
                    "label" : "Icon Image"
                    },
                    {
                        "type" : "text",
                        "id" : "title",
                        "label" : "Title"
                    }
            ]

  }
            
  ],
  "presets": [
    {
      "name": "Index Icons"
    }
  ]

}
{% endschema %}