  "label": "Banner Text",
  "default": "Contact us"
  },
  {
  "type": "header",
  "content": "Contect Us form"
  },
  {
  "type": "text",
  "id": "form_text",
  "label": "Form Text",
  "default": "Contact us at info@eyely.com or fill out the form below:"
  },
  {
  "type": "header",
  "content": "Contect Us Detail"
  },
  {
  "type": "image_picker",
  "id": "detail_img",
  "label": "Image"
  }
  ]
  }
  {% endschema %}
  
