{% assign social_networks = 'facebook_link|twitter_link|pinterest_link|instagram_link|tumblr_link|vimeo_link|youtube_link|linkedin_link|email_link|rss_link' %}
{% assign social_networks = social_networks | split: '|' %}

{% assign has_social_icons = false %}

{% for network in social_networks %}
  {% assign setting = 'social_' | append: network %}
  {% if settings[setting] != blank %}
    {% assign has_social_icons = true %}
    {% break %}
  {% endif %}
{% endfor %}

{% if has_social_icons %}
  <div class="social-icons">
    
    {%- if settings.social_tiktok_link != blank -%}
      {%
        render 'social-link',
        id: 'tiktok',
        title: 'Tiktok',
        url: settings.social_tiktok_link
      %}
    {%- endif -%}
    
    {%- if settings.social_instagram_link != blank -%}
      {%
        render 'social-link',
        id: 'instagram',
        title: 'Instagram',
        url: settings.social_instagram_link
      %}
    {%- endif -%}
    
    {%- if settings.social_facebook_link != blank -%}
      {%
        render 'social-link',
        id: 'facebook',
        title: 'Facebook',
        url: settings.social_facebook_link
      %}
    {%- endif -%}
    
    {%- if settings.social_pinterest_link != blank -%}
      {%
        render 'social-link',
        id: 'pinterest',
        title: 'Pinterest',
        url: settings.social_pinterest_link
      %}
    {%- endif -%}

    {%- if settings.social_twitter_link != blank -%}
      {%
        render 'social-link',
        id: 'twitter',
        title: 'Twitter',
        url: settings.social_twitter_link
      %}
    {%- endif -%}
    
    {%- if settings.social_youtube_link != blank -%}
      {%
        render 'social-link',
        id: 'youtube',
        title: 'Youtube',
        url: settings.social_youtube_link
      %}
    {%- endif -%}

    {%- if settings.social_tumblr_link != blank -%}
      {%
        render 'social-link',
        id: 'tumblr',
        title: 'Tumblr'
        url: settings.social_tumblr_link
      %}
    {%- endif -%}

    {%- if settings.social_vimeo_link != blank -%}
      {%
        render 'social-link',
        id: 'vimeo',
        title: 'Vimeo',
        url: settings.social_vimeo_link
      %}
    {%- endif -%}

    {%- if settings.social_linkedin_link != blank -%}
      {%
        render 'social-link',
        id: 'linkedin',
        title: 'LinkedIn',
        url: settings.social_linkedin_link
      %}
    {%- endif -%}

    {%- if settings.social_email_link != blank -%}
      {% assign url = 'mailto:' | append: settings.social_email %}
      {% assign email_title = 'general.general.email' | t %}
      {%
        render 'social-link',
        id: 'email',
        title: email_title_link,
        url: url
      %}
    {%- endif -%}

    {%- if settings.social_rss_link!= blank -%}
      {%
        render 'social-link',
        id: 'rss',
        title: 'general.social.rss' | t,
        url: settings.social_rss_link
      %}
    {%- endif -%}
  </div>
{% endif %}
