{% assign search_category = search_category | default: blank %}



{% unless template == 'index' %}
    <div class="breadcrumb d-flex flex-wrap mb-1 py-3 align-items-center">
      <a href="{{ routes.cart_url | split: 'cart' | first }}" > Home </a>  
      {% if template contains 'product' %} 
      
        {% if collection %}
          <span class="arrow">
            <i class="fa fa-angle-right" aria-hidden="true"></i>
          </span>
    
          {% if collection.handle %}
          {% capture url %}{{collection.url}}{% endcapture %}
         
            <span>{{ collection.title | split: '|' | first | link_to: url }}</span>
           
          {% endif %}
        {% endif %}
      
        <span class="arrow">
          <i class="fa fa-angle-right" aria-hidden="true"></i>
          </span>
        
          <span>{{ product.title | split: '|' | first }}</span>
        
      
      {% elsif template contains 'collection' and collection.handle %}
        {% if current_tags %}
          <span class="arrow">
            <i class="fa fa-angle-right" aria-hidden="true"></i>
          </span>
      
          {% capture url %}{{collection.url}}{% endcapture %}
          <span class="bd-title">
         
            <span>{{ collection.title | split: '|' | first | link_to: url }}</span>
           
    
            <span class="arrow">
              <i class="fa fa-angle-right" aria-hidden="true"></i>
            </span>
            
            {% assign bd_tags = current_tags | join: " + " %}
            
            <span>{{ bd_tags | split: '|' | first }}</span>
            
          </span>
      
        {% else %}
      
          <span class="arrow">
            <i class="fa fa-angle-right" aria-hidden="true"></i>
          </span>
      
          <span class="bd-title">
          
            <span>{{ collection.title | split: '|' | first | link_to: url }}</span>
            
            </span>
    
          {% endif %}
      
      {% elsif template == 'cart' %}
          <span class="arrow">
          <i class="fa fa-angle-right" aria-hidden="true"></i>
        </span> 	 
      {% elsif template == 'article' %}
    
        <span class="arrow">
          <i class="fa fa-angle-right" aria-hidden="true"></i>
        </span> 
      
         
          <span>{{ blog.title | split: '|' | first | link_to: blog.url }}</span>
        
      
        <span class="arrow">
          <i class="fa fa-angle-right" aria-hidden="true"></i>
        </span>
      
         
          <span>{{ article.title | split: '|' | first }}</span>
        
      {% elsif template contains 'page' %}
    
        <span class="arrow">
          <i class="fa fa-angle-right" aria-hidden="true"></i>
        </span>
      
        
          <span>{{ page.title | split: '|' | first }}</span>
      {% elsif template contains 'search' and search.performed %}
      {% capture sanitized_terms %}
        {%
          render 'search-sanitizer',
          search_terms: search.terms
        %}
      {% endcapture %}

      {% assign sanitized_terms = sanitized_terms | strip %}

       <span class="arrow">
          <i class="fa fa-angle-right" aria-hidden="true"></i>
        </span>

      {% if search_category != blank %}
        <span>
          {{
            'search.general.breadcrumbs_count_when_filtered'
            | t: terms: sanitized_terms, category: search_category, count: search.results_count
          }}
        </span>
      {% else %}
        <span>Search results for "{{ search.terms}}"</span>
      {% endif %}

    
      {% else %}
        <span class="arrow">
          <i class="fa fa-angle-right" aria-hidden="true"></i>
        </span>
      
        
          <span>{{ page_title | split: '|' | first }}</span>
       
      {% endif %}
  
    </div>
    {% endunless %}
    